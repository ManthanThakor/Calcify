@model CalcifySolver.Models.CalculatorModel

@{
    ViewBag.Title = "CalcifySolver";
}

<main>

    <h2>Simple Calculator</h2>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "calculatorForm" }))
    {
        <div>
            <label>Number 1:</label>
            @Html.TextBoxFor(m => m.Number1, new { @type = "number", required = "required" })
        </div>

        <div>
            <label>Number 2:</label>
            @Html.TextBoxFor(m => m.Number2, new { @type = "number", required = "required" })
        </div>

        <div>
            <label>Operation:</label>
            <div>
                <button type="submit" name="Operation" value="Add">Add</button>
                <button type="submit" name="Operation" value="Subtract">Subtract</button>
                <button type="submit" name="Operation" value="Multiply">Multiply</button>
                <button type="submit" name="Operation" value="Divide">Divide</button>
            </div>
        </div>
    }

    @if (Model.Result.HasValue)
    {
        <h3>Result: @Model.Result</h3>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <h3 style="color:red;">@Model.ErrorMessage</h3>
    }

</main>
