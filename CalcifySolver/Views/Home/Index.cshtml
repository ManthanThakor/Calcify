@model CalcifySolver.Models.CalculatorModel

@{
    ViewBag.Title = "CalcifySolver";
}

<main class="my-5 container">
    <div class="card p-4 shadow-lg">
        <h2 class="mb-4 text-center">Simple Calculator</h2>

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { id = "calculatorForm", @class = "calculator-form" }))
        {
            <div class="d-flex gap-4">

                <div class="mb-3">
                    <label for="Number1" class="form-label">Number 1:</label>
                    @Html.TextBoxFor(m => m.Number1, new { @type = "number", @class = "form-control", required = "required", placeholder = "Enter first number" })
                </div>

                <div class="mb-3">
                    <label for="Number2" class="form-label">Number 2:</label>
                    @Html.TextBoxFor(m => m.Number2, new { @type = "number", @class = "form-control", required = "required", placeholder = "Enter second number" })
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label">Operation:</label>
                <div class="btn-group w-100" role="group" aria-label="Basic example">
                    <button type="submit" name="Operation" value="Add" class="btn btn-outline-primary w-25">Add</button>
                    <button type="submit" name="Operation" value="Subtract" class="btn btn-outline-primary w-25">Subtract</button>
                    <button type="submit" name="Operation" value="Multiply" class="btn btn-outline-primary w-25">Multiply</button>
                    <button type="submit" name="Operation" value="Divide" class="btn btn-outline-primary w-25">Divide</button>
                </div>
            </div>
        }

        @if (Model.Result.HasValue)
        {
            <div class="alert alert-success mt-3" role="alert">
                <h3 class="text-center">Result: @Model.Result</h3>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3" role="alert">
                <h3 class="text-center">@Model.ErrorMessage</h3>
            </div>
        }
    </div>
</main>
